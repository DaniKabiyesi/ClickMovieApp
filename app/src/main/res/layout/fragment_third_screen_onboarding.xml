<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".feature.onboarding.ThirdScreenOnboardingFragment">


    <ImageView
        android:id="@+id/thirdScreenOnboardingImageView"
        android:layout_width="211dp"
        android:layout_height="213dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/thirdScreenOnboardingFirstTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/thirdScreenOnboardingFirstTextView"
        style="@style/FirstCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="View the weather in one easy place"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/thirdScreenOnboardingSecondTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdScreenOnboardingImageView" />

    <TextView
        android:id="@+id/thirdScreenOnboardingSecondTextView"
        style="@style/SecondCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="With our app, you can be able to easily know what to expect on the go"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdScreenOnboardingFirstTextView" />


    <com.example.myapplication.common.utils.AccessButton
        android:id="@+id/nextScreenButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thirdScreenOnboardingSecondTextView"
        app:text_button="Next" />


</androidx.constraintlayout.widget.ConstraintLayout>